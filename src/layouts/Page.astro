---
import Head from '../components/Head.astro'
import Header from '../components/Header.astro'

export interface Props {
  class?: string
  title?: string
}

const { class: className, title } = Astro.props
---

<html lang="en" class="h-full">
  <head>
    <Head title={title} />
  </head>
  <body class="flex flex-col h-full bg-stone-50 dark:bg-stone-900 text-stone-700 dark:text-stone-100 text-sm">
    <Header>
      <slot name="header-items" slot="header-items" />
    </Header>
    <main id="main" class:list={['grow p-3 w-full max-w-7xl mx-auto', className]}>
      <slot />
    </main>
  </body>
</html>
