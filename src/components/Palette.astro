---
import { getColorNames } from '../libs/tailwind'

import PaletteColors from './PaletteColors.astro'
import PaletteShades from './PaletteShades.astro'

const colorNames = getColorNames()
---

<div
  class:list={[
    'grid grid-cols-[auto_repeat(10,_1fr)] gap-0.5 pb-1',
    'grid-rows-[auto_repeat(21,minmax(2.5rem,_1fr))] xs:grid-rows-[auto_repeat(22,minmax(2.5rem,_1fr))]',
    'h-full items-center justify-items-center',
  ]}
>
  <PaletteShades />
  {colorNames.map((colorName) => <PaletteColors name={colorName} />)}
</div>
