---
import Link from './Link.astro'
import VisuallyHidden from './VisuallyHidden.astro'
---

<header class="border-b border-stone-400/50 dark:border-stone-600/75">
  <div class="max-w-7xl mx-auto flex items-center divide-x p-3">
    <h1 class="text-lg font-medium pr-3">
      <Link href="/" class="focus-visible:ring-offset-1 -ml-1.5">quickwind</Link>
    </h1>
    <div class="px-3 border-stone-400/50 dark:border-stone-600/75 hidden md:flex items-center gap-1 font-medium">
      <Link href="/colors" highlightable>Colors</Link>
      <Link href="/spacing" highlightable>Spacing</Link>
    </div>
    <div class="px-3 border-stone-400/50 dark:border-stone-600/75">
      <slot name="header-items" />
    </div>
    <div class="grow"></div>
    <div class="border-none gap-4 hidden xs:flex">
      <Link
        class="px-0 block rounded-full w-5 h-5 focus-visible:ring-offset-4"
        href="https://tailwindcss.com"
        rel="noreferrer"
        target="_blank"
        title="Open Tailwind CSS website"
      >
        <VisuallyHidden>Tailwind CSS website</VisuallyHidden>
        <svg viewBox="0 0 54 33" aria-hidden="true" class="mt-[2px]">
          <g>
            <path
              fill="currentColor"
              d="M27 0c-7.2 0-11.7 3.6-13.5 10.8 2.7-3.6 5.85-4.95 9.45-4.05 2.054.513 3.522 2.004 5.147 3.653C30.744 13.09 33.808 16.2 40.5 16.2c7.2 0 11.7-3.6 13.5-10.8-2.7 3.6-5.85 4.95-9.45 4.05-2.054-.513-3.522-2.004-5.147-3.653C36.756 3.11 33.692 0 27 0zM13.5 16.2C6.3 16.2 1.8 19.8 0 27c2.7-3.6 5.85-4.95 9.45-4.05 2.054.514 3.522 2.004 5.147 3.653C17.244 29.29 20.308 32.4 27 32.4c7.2 0 11.7-3.6 13.5-10.8-2.7 3.6-5.85 4.95-9.45 4.05-2.054-.513-3.522-2.004-5.147-3.653C23.256 19.31 20.192 16.2 13.5 16.2z"
            ></path>
          </g>
        </svg>
      </Link>
      <Link
        class="px-0 block rounded-full w-5 h-5 focus-visible:ring-offset-4"
        href="https://github.com/HiDeoo/quickwind"
        rel="noreferrer"
        target="_blank"
        title="Open Quickwind GitHub repository"
      >
        <VisuallyHidden>Quickwind GitHub repository</VisuallyHidden>
        <svg viewBox="0 0 24 24" aria-hidden="true" class="mt-[-2px]">
          <path
            fill="currentColor"
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
      </Link>
    </div>
  </div>
</header>
