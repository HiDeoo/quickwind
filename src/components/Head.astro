---
export interface Props {
  title?: string | undefined
}

const { title: pageTitle } = Astro.props

const description = 'Quickly preview and export Tailwind CSS colors and spacing scale.'
const canonicalUrl = new URL(Astro.url.pathname, Astro.site)
const ogImageAlt = 'Quickwind icon'
const ogImageUrl = new URL('/images/og.png', Astro.site)
const title = pageTitle && pageTitle.length > 0 ? `${pageTitle} - Quickwind` : 'Quickwind'
---

<meta charset="utf-8" />

<title>{title}</title>

<link rel="canonical" href={canonicalUrl} />
<link rel="icon" href="/images/favicon.ico" sizes="any" />
<link rel="icon" href="/images/favicon.svg" type="image/svg+xml" />

<meta name="author" content="HiDeoo" />
<meta name="color-scheme" content="dark light" />
<meta name="description" property="og:description" content={description} />
<meta name="theme-color" media="(prefers-color-scheme: dark)" content="hsl(24 10% 10%)" />
<meta name="theme-color" media="(prefers-color-scheme: light)" content="hsl(60 9% 98%)" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:alt" content={ogImageAlt} />
<meta property="og:locale" content="en_US" />
<meta property="og:title" content={title} />
<meta property="og:type" content="profile" />
<meta property="og:url" content={canonicalUrl} />

<meta name="twitter:card" content="summary" />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />
<meta name="twitter:image:alt" content={ogImageAlt} />
<meta name="twitter:title" content={title} />
